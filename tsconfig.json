{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
    "types": [
      "vitest/globals"
    ],
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "moduleResolution": "Bundler"
  }
}
